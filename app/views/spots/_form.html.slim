= form_with(model: @spot,local: true,class:"col s12") do |f|
  = render 'shared/error_messages',object: f.object
  = f.label "店名"
  = f.text_field :name,class: 'validate'
  
  =f.label "郵便番号"
  =f.text_field :zip, class:'validate'

  =f.label "住所"
  = f.text_area :address,class: 'validate'

  =f.label "電話番号"
  =f.telephone_field :tel,class: 'validate'
  = f.submit yield(:button_text) ,class:"waves-effect waves-light btn"

  span.image 
    =f.file_field :image , accept: "image/jpeg,image/gif,image/png" 

javascript: 
  $("#spot_image").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("恐れ入りますがファイルは5MB以下にしてください。");
      $("#spot_image").val("");
    }
  });